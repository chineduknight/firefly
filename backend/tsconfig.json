{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "jest", "ts-node"]
  },
  "exclude": ["src/**/*.test.ts", "src/**/*.spec.ts"],
  "types": ["reflect-metadata", "jest"]
}
